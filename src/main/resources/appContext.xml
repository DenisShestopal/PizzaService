<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean name ="pizzaRepository"
          class="Repository.InMemory.InMemoryPizzaRepository"
         init-method="init"/>

    <bean name ="orderRepository"
          class="Repository.InMemory.InMemoryOrderRepository"/>

    <bean name = "pizzaService"
          class="Services.Simple.SimplePizzaService">
        <constructor-arg ref="pizzaRepository"/>
    </bean>

    <bean name = "orderService"
          class="Services.Simple.SimpleOrderService">
        <constructor-arg ref="pizzaService"/>
        <constructor-arg ref="orderRepository"/>
    </bean>

</beans>