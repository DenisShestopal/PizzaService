<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">


    <!-- bean definitions here -->
    <context:component-scan base-package="Services"/>
    <context:component-scan base-package="Domain"/>

    <bean name="pizza" class="Infrastructure.Annotations.MyFactoryBean"/>
    <bean class="Infrastructure.Annotations.BenchmarkBeanPostProcessor"/>
    <!--<bean class="Infrastructure.CustomBeanFactoryPostProcessor"/>-->

    <bean name = "orderService"
          class="Services.Simple.SimpleOrderService">
        <lookup-method name="createNewOrder" bean="order"/>
    </bean>

    <bean name="order" class="Domain.Order" scope="prototype">
        <constructor-arg>
            <set>
                <ref bean="cardDiscount"/>
            </set>
        </constructor-arg>
    </bean>


</beans>